<%= provide(:title, "Requests") %>
<div class="row-fluid">
	<h1>Requests</h1>

	<p>
		<%= link_to 'New Request', new_request_path, class: "btn btn-small btn-primary active" %>
	</p>
	<table width="80%" class="table table-condensed">
	<% @requests.each do |request| %>
	  <tr>
		  <td><%= request.id %></td>
		  <td><%= request.current_status.status %></td>
		  <td><%= request.current_status.created_at.strftime("%B %d, %Y") %></td>
		  <td><%= request.user.name %></td>
		  <td><%= request.recipient_organization %></td>
	    <td><%= truncate(request.request_text, length: 50) %></td>
	    <td><%= link_to 'Show', request %></td>
	  </tr>
	<% end %>
	</table>
</div>
